<% @title=": Mini-Challenge" %>
<script type="text/javascript">
    mixpanel.track("challenge_saving_info", {
        
    });
</script>

<body class="page-background">

	<section id="top-nav">
		<%= image_tag("savvy-logo.png", class:'top-logo' )%>
		<%= link_to "Sign out", destroy_user_session_path, method: :delete, :class=>'sign-out' %>
	</section>
	<hr />

	<section id="coach-section">
		<div class="coach-chat-triangle"></div>
      	<div class="coach-question">
	        <%= savings_intro_message %>
      	</div>
    </section>

    <script>
		$(document).ready(function(){
    		for(i=1; i<4; i++) {
    			$('#chat'+i).hide(0).delay(1500*i).fadeIn(100).removeClass('hidden');
    		}
		});
	</script>

	<div id= "chat1" class="hidden" style="display:none;">
		<section id="coach-section">
			<div class="coach-chat-triangle"></div>
	      	<div class="coach-question">
		        Let's first identify an area where you think you could cut back a little bit.
	      	</div>
	    </section>
	</div>

	<div id= "chat2" class="hidden" style="display:none;">
		<%= form_for @fin_profile do |f| %>

			<section id="user-section">
				<div class="spaced-row user-content">
					<div class="madlib-sentence">	
					I think I could cut back a little bit on<br/>
						<div class="dropdown-style inner-addon right-addon">
							
							<%= f.select(:biggest_expense, [['buying coffee', 'buying coffee'], ['going out for drinks', 'going out for drinks'], ['eating lunch out', 'eating lunch out'], ['eating dinner out', 'eating dinner out']], { include_blank: "this activity..." }, {:id => "dropdown", :required => true, :class => 'my-dropdown select'}) %>
							<span class="glyphicon"><%= image_tag("dropdown-arrow.png", size: "10x10")%></span>
						</div>
					</div>
				</div>
				<div class="spaced-row user-content">
					<div class="madlib-sentence">	
						I do this
						<div class="dropdown-style inner-addon right-addon">
							<%= f.telephone_field :expense_frequency, class: "number-field", placeholder: "#", :value=>"", :required => true %>
						</div>
						times a week.
						
					</div>
				</div>
			</section>
			<div id="SubmitButton" class="hidden" style="display:none;">
				<div class="button-row">
					<%= f.submit "Next", class: 'next-button' %>
				</div>
			</div>
		<% end %>
	</div>
</body>