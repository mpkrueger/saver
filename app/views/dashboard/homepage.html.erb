<% @title=": Home" %>
<script type="text/javascript">
    mixpanel.track("homepage", {
			"distinct_id": <%= @user.id.to_s %>        
    });
</script>




<body class="splash-background">
	<div class="splash-banner">
		<div class="banner-image">
		</div>
	</div>
	<div class="splash-section">


		<% if @user.investing_profile.service_choice != nil %>
			<div class="user-welcome"> Hey, <%= @user.name %>!</div>
			<div class="user-feedback-cta">
				Congrats on picking <%= @user.investing_profile.service_choice %>! We hope you were able to 
				successfully make an investment! If so, could you please fill out a couple quick questions about your experience? It'll help us make Savvy better for the next group!   <br />
				<div class="button-row">
				<%= link_to "Give Feedback", dashboard_invested_path, :class=>'lp-button' %>
				</div>
			</div>
		<% elsif @user.investing_profile.service_choice == nil %>
			<div class="user-welcome"> Hey, <%= @user.name %>! 
				<div class="signup-instruction">
					Ready to pick an investment site and make that investment? <br />
					<div class="button-row">
					<%= link_to "Let's do this!", services_recommendation_path, :class=>"lp-button" %>
					</div>
				</div>
			</div>
			
		<% end %>
	</div>





	<div class="secondary-links">
		<div class="eqi-container">
			<div class="footer-left">
				<%= link_to "Sign Out", destroy_user_session_path, :class=>'sign-out' , method: :delete %>
			</div><div class="footer-middle">
				<%= link_to "Get Help",   challenges_lets_chat_path, :class=>'get-help' %>
			</div><div class="footer-right">
			<%= link_to "Give Feedback", dashboard_feedback_path, :class=>'feedback' %>
			</div>
		</div>
	</div>
</body>