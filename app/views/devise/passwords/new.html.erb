<% @title=": Forgot Password" %>
<script type="text/javascript">
    mixpanel.track("forgot_password", {
        
    });
</script>

<div class="header saver-header">
  <div class="saver-header-icon-block"><%= image_tag("piggybank2.png", class:"saver-header-icon") %> </div>
  <div class="saver-header-logo-block"> <%= image_tag("savvysaverlogo.png", class:"saver-header-logo") %></div>
    <br /> <hr class="saver-hr"/>
  </div>
</div>





	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div class="saver-question-block">
  			<div class="big-headline"> Reset password </div>


	        <div class="spaced-row">
	            <div class="dropdown-style">
					<%= f.email_field :email, class: "border-underline", style:"width:250px; color:#333", placeholder: "email address" %>
				</div>

	  			<div class="button-row">
	    			<%= f.submit "Send me instructions to reset my password", class: 'next-button' %>
	  			</div>
	  		</div>
  		</div>
	<% end %>

	<div class="sign-in-link">
		<%= render "devise/shared/links" %>
	</div>

	</section>
</div>