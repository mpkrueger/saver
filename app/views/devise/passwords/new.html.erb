<% @title=": Forgot Password" %>
<script type="text/javascript">
    mixpanel.track("forgot_password", {
        
    });
</script>

<body class="page-background">

  	<div class="splash-section">
	    <p class="app-name"><%= image_tag("savvy-logo.png", class:"app-name") %> </p>
	    <p class="app-tagline"> The free financial coach you've always wanted </p>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= devise_error_messages! %>

	  		<section id="user-section">
        		<div class="spaced-row user-content">
          			<div class="row-future">
	    				<%= f.email_field :email, class: "madlib-sentence border-underline", placeholder: "email address" %>
	  				</div>
	  			</div>

	  			<div class="button-row">
	    			<%= f.submit "Send me reset password instructions", class: 'next-button' %>
	  			</div>
		<% end %>
	</div>

	<div class="sign-in-link">
		<%= render "devise/shared/links" %>
	</div>

</body>