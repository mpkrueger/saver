<% @title=": Sign Up" %>
<script type="text/javascript">
    mixpanel.track("sign_up", {
        
    });
</script>

<body class="page-background">

  <section id="first-priority">
    What we'll tackle first:
    <br /><span class="main-question"><%= @guest_user.area_to_work_on %></span>
  </section>

  <script>
    $(document).ready(function(){
      for(i=1; i<5; i++) {
        $('#chat'+i).hide(0).delay(1000*i).fadeIn(100).removeClass('hidden');
      }
    });
  </script>

  <div id="chat1" class="hidden" style="display:none;">
    <section id="coach-section">
      <div class="coach-chat-triangle"></div>
      <div class="coach-question">
        Money shouldn't be intimidating.
      </div>
    </section>
  </div>

  <div id="chat2" class="hidden" style="display:none;">
    <section id="coach-section">
      <div class="coach-chat-triangle"></div>
      <div class="coach-question">
        Savvy is your very own financial coach, helping you to understand and improve your finances. One step at a time.
      </div>
    </section>
  </div>

  <div id="chat3" class="hidden" style="display:none;">
    <section id="coach-section">
      <div class="coach-chat-triangle"></div>
      <div class="coach-question">
        Of course, in order to work together we'll need a way to save your info and stay in touch. :)  
      </div>
    </section>
  </div>

  <div id="chat4" class="hidden" style="display:none;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <section id="user-section">
        <div class="spaced-row user-content">
          <div class="row-future">
            <%= f.email_field :email, class: "madlib-sentence border-underline", placeholder: "email address" %>
          </div>

          <div class="row-future">
            <%= f.password_field :password, class: "madlib-sentence border-underline", placeholder: "password", autocomplete: "off" %>
          </div>
  
          <div class="row-future">
            <%= f.password_field :password_confirmation, class: "madlib-sentence border-underline", placeholder: "confirm password", autocomplete: "off" %>
          </div>

          <div class="spaced-row"></div>
          <div class="button-row">
            <%= f.submit "Sign up", class: 'next-button' %>
          </div>
          <div class="padding-bottom">
            <div class="padding-text">
              adding space below next button
            </div>
          </div>
        </div>
      </section>

    <% end %>

  </div>
</body>