<% @title=": Introductions" %>
<script src="jquery-1.12.4.min.js"></script>
<script type="text/javascript">
    mixpanel.track("goals_introductions", {
        
    });
</script>

<body class="page-background">

	<section id="coach-section">
		<div class="coach-chat-triangle"></div>
		<div class="coach-question">
			<aside>
				Hey there, I'm here to help you get more out of your hard-earned money and boost your financial savvy.
			</aside>
		</div>
	</section>

	<script>
		$(document).ready(function(){
    		for(i=1; i<3; i++) {
    			$('#chat'+i).hide(0).delay(1250*i).fadeIn(100).removeClass('hidden');
    		}
		});
	</script>

	<div id= "chat1" class="hidden" style="display:none;">
		<section id="coach-section">
			<div class="coach-chat-triangle"></div>
			<div class="coach-question">
				<aside>
					Money can be a sensitive topic, so let's get to know each other. What can I call you?
				</aside>
			</div>
		</section>
	</div>

	
	<div id= "chat2" class="hidden" style="display:none;">
		<%= form_for @guest_user do |f| %>
			<section id="user-section">

				<div class="spaced-row user-content">
					<div class="madlib-sentence">
						You can call me  
						<div class="dropdown-style">
						<%= f.text_field :name, class: "text-field", placeholder: "first name",  :autocorrect => "off", :required => true %> </div>
						<br />
						and I'm
						<div class="dropdown-style">
						<%= f.telephone_field :age, class: "number-field", placeholder: "age", :required => true %> </div>
						years old.
					</div>
				</div>
		
			</section>

			<div class="button-row">
				<%= f.submit "Next", class: 'next-button' %>
			</div>
			<div class="page-bottom-padding">
				<div class="padding-text">
					adding space below next button
				</div>
			</div>
		<% end %>
	
	</div>
	
</body>
