<script src="jquery-1.12.4.min.js"></script>
<body class="page-background">

<section id="coach-section">
	<div class="coach-chat-triangle"></div>

	<div class="coach-question">
		<aside>
		Money can be a sensitive topic, but we’re here to help, no judgment. 
		</aside>
		<span class="main-question">
		Let’s get acquainted.</span>
	</div>
</section>

<!-- fade in user input section -->
<script>
$(document).ready(function(){
    $('div.hidden').hide(0).delay(1000).fadeIn(1000).removeClass('hidden');
});
</script>

<div class="hidden" style="display:none;">
<section id="user-section">
<%= form_for @user do |f| %>
	<div class="spaced-row user-content">
		<div class="madlib-sentence">
			You can call me  
				<%= f.text_field :name, class: "text-field", placeholder: "first name", :autofocus => true, :autocorrect => "off", :required => true %>.
			<br />
			I'm
					<%= f.telephone_field :age, class: "number-field", placeholder: "age", :required => true %> 
					years old.
		</div>
	</div>
	
	
</section>

<div class="button-row">
		<%= f.submit "Next", class: 'next-button' %>
	</div>

</div>

	<% end %>

</body>
