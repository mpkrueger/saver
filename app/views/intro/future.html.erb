<div id= "chat2" class="hidden" style="display:none;">
<%= form_for @guest_user, url: wizard_path, method: :put do |f| %>
	<%= f.fields_for :future_day do |i| %>
<section id="user-section">

	<div class="row-future">
	  <div class="col-madlibs-question">I'll live in: </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :city, class: "madlib-sentence", placeholder: "city", required: true %>
	  	
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">in a/an </div>
	  <div class="col-madlibs-field">
	  <div class="dropdown-style inner-addon right-addon">
	  	<%= i.select :home, [['apartment', 'apartment'], ['house', 'house'], ['mansion', 'mansion'], ['boat', 'boat']], { prompt: '' }, class: "my-dropdown", required: true %>
		<span class="glyphicon glyphicon-menu-down" style="color:#FFF"></span>
	  	</div>
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">with </div>
	  <div class="col-madlibs-field">
	  <div class="dropdown-style inner-addon right-addon">
	  	<%= i.select :living_with, [['no one else', 'no one else'], ['roommates', 'roommates'], ['my partner', 'my partner'], ['my family', 'my family']], { prompt: '' }, class: "my-dropdown", required: true %>
		<span class="glyphicon glyphicon-menu-down" style="color:#FFF"></span>
	  	</div>
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">For work, I </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :company, class: "madlib-sentence", placeholder: "do important stuff", required: true %>
	 
	  </div>
	</div>	


	<div class="row-future">
	  <div class="col-madlibs-question">For fun, I </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :evenings, class: "madlib-sentence", placeholder: 'cook, watch TV', required: true %>
		</div>
	  </div>


	<div class="row-future">
	  <div class="col-madlibs-question">Life is different b/c </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :major_goal, class: "madlib-sentence", placeholder: "relationship / lifestyle", :autocapitalize => "off", required: true %>

	  </div>
	</div>	

	<div class="button-row">
	<%= i.submit "Next", class: 'next-button' %>
</div>
	<% end %>


</section>


<% end %>
