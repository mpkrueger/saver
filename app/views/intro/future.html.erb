<script type="text/javascript">
    mixpanel.track("future", {
        
    });
</script>

<body class="page-background">


<section id="coach-section">
	<div class="coach-chat-triangle"></div>

	<div class="coach-question">
		<aside>
		Ok, now for the fun stuff – let’s do a little exercise. </aside>
		<p class="main-question">Let's fast forward to
		<%= (Time.now + 3.year).strftime("%a, %b %d, %Y") %>, 
		3 years from today</p>
	</div>
</section>

<section id="user-section">

<%= form_for @user, url: wizard_path, method: :put do |f| %>
	<%= f.fields_for :future_day do |i| %>
	
	<div class="row-future">
	  <div class="col-madlibs-question">Pronoun to describe me: </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :gender, class: "madlib-sentence", placeholder: "she / he / they", autofocus: true, :autocapitalize => "off", required: true %>
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">I'll live in: </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :city, class: "madlib-sentence", placeholder: "city", required: true %>
	  	
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">because </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :reason, class: "madlib-sentence", placeholder: "reason", :autocapitalize => "off", required: true %>
	
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">I'll work for </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :company, class: "madlib-sentence", placeholder: "company", required: true %>
	 
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">working as a </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :role, class: "madlib-sentence", placeholder: "role", :autocapitalize => "off", required: true %>
	  
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">I spend my days with </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :day_person, class: "madlib-sentence", placeholder: "people", :autocapitalize => "off", required: true %>
	  
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">I'll spend my evenings with </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :after_work, class: "madlib-sentence", placeholder: "people", :autocapitalize => "off", required: true %>
	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">On weekends, I'll enjoy </div>
	  <div class="col-madlibs-field">
	  	<%= i.text_field :weekends, class: "madlib-sentence", placeholder: "activies", :autocapitalize => "off", required: true %>

	  </div>
	</div>	

	<div class="row-future">
	  <div class="col-madlibs-question">Financially, I'll be </div>
	  <div class="col-madlibs-field">
	  	<div class="dropdown-style inner-addon right-addon">
		  	<%= i.select :financially, [['worse off', 'worse off'], ['better off', 'better off'], ['awesome', 'awesome']], {prompt: 'better/worse?'}, :required => true, :class=>"my-dropdown" %>
		  	<span class="glyphicon glyphicon-menu-down" style="color:#FFF"></span>
	  	</div>
	  </div>
	</div>	
	<div class="button-row">
	<%= i.submit "Next", class: 'next-button' %>
</div>
	<% end %>
<% end %>

</section>


</body>