<script type="text/javascript">
    mixpanel.track("investments", {
        
    });
</script>
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>


<body class="page-background">

<section id="coach-section">
	<div class="coach-question">
		<aside> 
		<%= savings_feedback %>
		</aside>
		<p class="main-question"><%= investment_question %> </p>
		
	</div>
</section>

<!-- fade in user input section -->
<script>
$(document).ready(function(){
    $('div.hidden').hide(0).delay(1500).fadeIn(1000).removeClass('hidden');
});
</script>



<!--div class="hidden" style="display:none;"-->
	<section id="user-section">


	<%= form_for @user, url: wizard_path, method: :put do |f| %>
		<div class="spaced-row">
				I invest in:
				
			<%= f.fields_for :investments_type do |i| %>
				
				<div class="checkbox disabled">
					<%= i.check_box :retirement_fund, data: { toggle: 'toggle', onstyle: 'toggle-on-background', offstyle: 'toggle-off-background', on: 'Yep!', off: 'Nope', size: 'small' } %>
					<label for="retirementfund">
						<span class="multichoice">a retirement fund (e.g. 401K, IRA)</span>
					</label>
				</div>

				<div class="checkbox disabled">
					<%= i.check_box :company_stock, data: { toggle: 'toggle', onstyle: 'toggle-on-background', offstyle: 'toggle-off-background', on: 'Yep!', off: 'Nope', size: 'small' } %>
					<label for="companystocks">
			    		<span class="multichoice">company stocks (e.g. ESPP)</span>
			  		</label>
				</div>

				<div class="checkbox disabled">
					<%= i.check_box :stock_market, data: { toggle: 'toggle', onstyle: 'toggle-on-background', offstyle: 'toggle-off-background', on: 'Yep!', off: 'Nope', size: 'small' } %>
					<label for="stockmarket">
			    		<span class="multichoice">the stock market (e.g. mutual/index funds, stocks)</span>
			  		</label>
				</div>

				<div class="checkbox disabled">
					<%= i.check_box :beanie_babies, data: { toggle: 'toggle', onstyle: 'toggle-on-background', offstyle: 'toggle-off-background', on: 'Yep!', off: 'Nope', size: 'small' } %>
					<label for="other">
			    		<span class="multichoice">other moneymakers (e.g. Beanie Babies, stamps)</span>
			  		</label>
				</div>	

			<% end %>

		<%= f.submit 'Next', class: 'next-button' %>
	<% end %>
		
	</section>

</body>
