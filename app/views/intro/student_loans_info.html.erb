<script type="text/javascript">
    mixpanel.track("student_loans_info", {
        
    });
</script>
<body class="page-background">

<section id="coach-section">
	<div class="coach-chat-triangle"></div>
	<div class="coach-question">

		Nice to meet you, <%= @current_user.name %>. 
		<%= student_loans_info %> 
		<p class="main-question">
		Do you have any student loans?
		</p>
	</div>

</section>

<!-- fade in user input section -->
<script>
$(document).ready(function(){
    $('div.hidden').hide(0).delay(1500).fadeIn(1000).removeClass('hidden');
});
</script>

<div class="hidden" style="display:none;">
	
	<%= form_for @user, url: wizard_path, method: :put do |f| %>

	<section id="user-section">
	
		
		<div class="spaced-row user-content">
			<div class="madlib-sentence">			
				I owe
				<span class="dropdown-style inner-addon right-addon">
					<%= f.select :student_amount, [['nothing', 0], ['under $10,000', 1], ['$10,000 - $30,000', 2], ['Over $30,000', 3]], {prompt: 'this much...'}, :required => true , :class => "my-dropdown" %>
					<span class="glyphicon glyphicon-menu-down" style="color:#FFF"></span>
				</span>
				in student loans. 
			</div>
		</div>	
	</section>

	<div class="button-row">
			<%= f.submit "Next", class: 'next-button' %>
	</div>
	<% end %>
</div>


</body>