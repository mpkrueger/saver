<% @title=": Introductions" %>


<script>
$(document).ready(function() {
  $('a[href*="#questions"]:not([href="#"])').click(function() {
    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
      var target = $(this.hash);
      target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
      if (target.length) {
        $('html, body').animate({
          scrollTop: target.offset().top
        }, 1000);

        
        return false;
      }
    }
  });

  
  
});

</script>


		<div class="header saver-header">
			<div class="saver-header-icon-block"><%= image_tag("piggybank2.png", class:"saver-header-icon") %> </div>
			<div class="saver-header-logo-block">	<%= image_tag("savvysaverlogo.png", class:"saver-header-logo") %></div>
				<br /> <hr class="saver-hr"/>
		</div>


<div class="saver-question-block">
    <div class="big-headline">Hi there! </div>
    <div class="headline option-row">We're excited to save you some money.</div>
   	<div class="button-row option-row"><a href="#questions", class="next-button">Next</a></div>
</div>



<%= form_for @saver_guest do |f| %>
<div class="saver-question-block" id="questions">        
	<div class="headline">First off, a couple quick questions so we can give you an estimate of how much we can save you. </div>
	<br />
	<div style="margin-left:10px;">
	    <div class="headline">1. When did you last move? </div>
	    <div class="field form-group">
		    <div class="btn-group" data-toggle="buttons">
		      <%= f.label :last_moved, class: "btn btn-primary" do %>
		        <%= f.radio_button :last_moved, "Less than a year ago" %>
		        Less than a year ago
		      <% end %><br /><br />
		      <%= f.label :last_moved, class: "btn btn-primary" do %>
		        <%= f.radio_button :last_moved, "More than a year ago" %>
		        More than a year ago
		      <% end %>
		    </div>
	  	</div>
	</div>
    <br /><br />
    <div class="headline">2. Have you negotiated a lower rate in the last year? </div>
    <%= f.radio_button(:negotiated, "yes") %>
    <%= label_tag(:negotiated_yes, "Yes") %><br />
    <%= f.radio_button(:negotiated, "no") %>
    <%= label_tag(:negotiated_no, "No") %>
    <br /><br />
    <div class="headline">3. Which services do you currently have? </div>
    <%= f.fields_for :services do |i| %>
        <label><%= i.check_box :cable %> Cable</label><br />
        <label><%= i.check_box :internet %> Internet</label><br />
        <label><%= i.check_box :phone %> Phone </label><br />
        <label><%= i.check_box :other %> Other </label>
    <% end %>
	<br /><br />
    </div>
	    <%= f.submit "Next", class: 'next-button' %>
	</div>

  <% end %>