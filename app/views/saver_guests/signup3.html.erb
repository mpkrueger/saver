<% @title=": Signup" %>
<script type="text/javascript">
    mixpanel.track("saver_signup3", {

    });
</script>



<div class="header saver-header">
	<div class="saver-header-icon-block"><%= image_tag("piggybank2.png", class:"saver-header-icon") %> </div>
	<div class="saver-header-logo-block">	<%= image_tag("savvysaverlogo.png", class:"saver-header-logo") %></div>
		<br /> <hr class="saver-hr"/>
	</div>
</div>

<%= form_for @saver_guest do |f| %>

<div class="centered-title" style="vertical-align: middle;
    padding-top: 15%; width:80%">
  We're excited to save you time and money!
  <br /> <br />
  All we need from you is your <span style="font-weight:700;"> first name </span>and your <span style="font-weight:700;"> email </span> so we can contact you about your bill and your savings.
  <br /> <br />
  <%= f.hidden_field :flow, value: "3" %>
 
  <div class="centered-title">
    <row style="height:30px; width:100%; display: inline-block;">
    <div class="col-xs-4"  style="margin-top: 12px; color: #00A99D; padding-right: 0; padding-left: 5px; text-align:right;">
    First name:
    </div>
    <div class="col-xs-8" style="text-align:left;">
      <div class="dropdown-style">
          <%= f.text_field :name, class: "madlib-sentence border-underline", style:"width:300px;", required: true %>
      </div>
    </div>
    </row>
    <br />
    <row style="height:30px; width:100%; display: inline-block;">
    <div class="col-xs-4" style="margin-top: 22px; color: #00A99D; padding-right: 0; padding-left: 5px; text-align:right;">
    Email:
    </div>
    <div class="col-xs-8" style="text-align:left;">
    <div class="dropdown-style" style="margin-top:10px;">
      <%= f.email_field :email, class: "madlib-sentence border-underline", style:"width:300px;", required: true %>
    </div>
    </div>
    </row>
  </div>
  <br /> 
  <div class="subtext" style="margin-top: 20px; margin-bottom: 14px; text-align:center;">
    We promise not to spam your inbox. <br/>
  </div>
  <div class="centered-title">
  <%= f.submit "Save me some money", class:"next-button" %>
  </div>
  <br /><br />

  <div><span style="color:transparent">a</span><br /><br /></div>


</div>

<% end %>