	  target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
	  if (target.length) {
	    $('html, body').animate({
	      scrollTop: target.offset().top
	    }, 1000);
	    
	    return false;
	  }
	}
	});


	$('a[href*="#reputation"]:not([href="#"])').click(function() {
